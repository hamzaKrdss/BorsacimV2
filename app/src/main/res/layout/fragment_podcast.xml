<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".classes.PodcastFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <ImageView
        android:id="@+id/podcastCover"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/microphone_icon"
        android:background="@drawable/circle_cover_bg"
        android:elevation="12dp"
        android:padding="12dp"
        android:outlineSpotShadowColor="#BBFFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/podcastTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸŽ™ GÃ¼nlÃ¼k Podcast"
        android:textColor="#F5F5F7"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.05"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/podcastCover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/podcastDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BugÃ¼nÃ¼n Ã¶zetini dinlemek iÃ§in oynat'a bas!"
        android:textColor="#B0B3B8"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/podcastTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="50dp"
        android:progressDrawable="@drawable/custom_seekbar"
        android:thumbTint="#FFFFFF"
        android:thumb="@drawable/thumb_big"
        app:layout_constraintTop_toBottomOf="@id/podcastDescription"
        android:max="100" />

    <LinearLayout
        android:id="@+id/txtLinearlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/startTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#FFFFFF"
            android:layout_marginStart="16dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/endTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="16dp"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/playPauseButton"
        android:layout_width="200dp"
        android:layout_height="72dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/ripple_play_button_bg"
        android:padding="12dp"
        android:src="@drawable/ic_play"
        android:contentDescription="Play or Pause"
        android:scaleType="centerInside"
        android:tint="#FFFFFF"
        android:elevation="12dp"
        android:stateListAnimator="@animator/button_elevation_animator"
        app:layout_constraintTop_toBottomOf="@+id/txtLinearlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>



